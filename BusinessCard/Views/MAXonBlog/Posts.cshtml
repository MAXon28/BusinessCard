@{
    ViewData["Title"] = "Блог";
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/posts.css" runat="server" />
    <link rel="stylesheet" href="~/css/preloader.css" runat="server" />
    <link rel="stylesheet" href="~/css/font-awesome.css" runat="server" />
    <link rel="stylesheet" href="~/css/font-awesome.min.css" runat="server" />
    <script src="https://use.fontawesome.com/5d4de9dc4f.js"></script>
</head>
<div class="menuFullWindow" style="display: none;">
    <div class="filtersBlockFullWindow">
        <div class="servicesBlock">
            <p class="headerFullWindow">Сервисы</p>
            <div class="serviceBlockFullWindow" onclick="OpenSubscriptions()">
                <svg viewBox="0 0 24 24" class="serviceIcon">
                    <path fill="#211F30" d="M19,7H16V6A4,4,0,0,0,8,6V7H5A1,1,0,0,0,4,8V19a3,3,0,0,0,3,3H17a3,3,0,0,0,3-3V8A1,1,0,0,0,19,7ZM10,6a2,2,0,0,1,4,0V7H10Zm8,13a1,1,0,0,1-1,1H7a1,1,0,0,1-1-1V9H8v1a1,1,0,0,0,2,0V9h4v1a1,1,0,0,0,2,0V9h2Z"/>
                </svg>
                <p class="serviceName">Подписки</p>
            </div>
            <div class="serviceBlockFullWindow" onclick="OpenMailings()">
                <svg viewBox="0 0 24 24" class="serviceIcon">
                    <path fill="#211F30" d="M19,4H5A3,3,0,0,0,2,7V17a3,3,0,0,0,3,3H19a3,3,0,0,0,3-3V7A3,3,0,0,0,19,4ZM5,6H19a1,1,0,0,1,1,1l-8,4.88L4,7A1,1,0,0,1,5,6ZM20,17a1,1,0,0,1-1,1H5a1,1,0,0,1-1-1V9.28l7.48,4.57a1,1,0,0,0,1,0L20,9.28Z"/>
                </svg>
                <p class="serviceName">Рассылки</p>
            </div>
            <div class="serviceBlockFullWindow" onclick="OpenBookmarks()">
                <svg viewBox="0 0 24 24" class="serviceIcon" style="fill: none; stroke: #211F30; stroke-width: 2px;">
                    <path d="M18,22a.99971.99971,0,0,1-.5-.13379L12,18.69434,6.5,21.86621A1.00042,1.00042,0,0,1,5,21V5A3.00328,3.00328,0,0,1,8,2h8a3.00328,3.00328,0,0,1,3,3V21a1.00072,1.00072,0,0,1-1,1Z"/>
                </svg>
                <p class="serviceName">Закладки</p>
            </div>
        </div>
        <div class="channelsBlock">
            <p class="headerFullWindow">Каналы</p>
            <div id="channelsFullWindow" class="channels"></div>
            <p class="viewAll">Смотреть все →</p>
        </div>
        <p class="skipButton" onclick="CloseMenu()">×</p>
    </div>   
</div>
<body class="body-catalog">
    <div class="scene-catalog">
        <div id="allDataSpinner" class="reverse-spinner" style="display: none;">
            <div class="status">Загрузка<span class="status__dot">.</span><span class="status__dot">.</span><span class="status__dot">.</span></div>
        </div>
        <div class="mainBlock" style="display: none;">
            <div class="filtersBlock">
                <div class="servicesBlock">
                    <p class="header">Сервисы</p>
                    <div class="serviceBlock" onclick="OpenSubscriptions()">
                        <svg viewBox="0 0 24 24" class="serviceIcon">
                            <path fill="#211F30" d="M19,7H16V6A4,4,0,0,0,8,6V7H5A1,1,0,0,0,4,8V19a3,3,0,0,0,3,3H17a3,3,0,0,0,3-3V8A1,1,0,0,0,19,7ZM10,6a2,2,0,0,1,4,0V7H10Zm8,13a1,1,0,0,1-1,1H7a1,1,0,0,1-1-1V9H8v1a1,1,0,0,0,2,0V9h4v1a1,1,0,0,0,2,0V9h2Z"/>
                        </svg>
                        <p class="serviceName">Подписки</p>
                    </div>
                    <div class="serviceBlock" onclick="OpenMailings()">
                        <svg viewBox="0 0 24 24" class="serviceIcon">
                            <path fill="#211F30" d="M19,4H5A3,3,0,0,0,2,7V17a3,3,0,0,0,3,3H19a3,3,0,0,0,3-3V7A3,3,0,0,0,19,4ZM5,6H19a1,1,0,0,1,1,1l-8,4.88L4,7A1,1,0,0,1,5,6ZM20,17a1,1,0,0,1-1,1H5a1,1,0,0,1-1-1V9.28l7.48,4.57a1,1,0,0,0,1,0L20,9.28Z"/>
                        </svg>
                        <p class="serviceName">Рассылки</p>
                    </div>
                    <div class="serviceBlock" onclick="OpenBookmarks()">
                        <svg viewBox="0 0 24 24" class="serviceIcon" style="fill: none; stroke: #211F30; stroke-width: 2px;">
                            <path d="M18,22a.99971.99971,0,0,1-.5-.13379L12,18.69434,6.5,21.86621A1.00042,1.00042,0,0,1,5,21V5A3.00328,3.00328,0,0,1,8,2h8a3.00328,3.00328,0,0,1,3,3V21a1.00072,1.00072,0,0,1-1,1Z"/>
                        </svg>
                        <p class="serviceName">Закладки</p>
                    </div>
                </div>
                <div class="channelsBlock">
                    <p class="header">Каналы</p>
                    <div id="channelsNotFullWindow" class="channels"></div>
                    <p class="viewAll" onclick="GetAllChannels()">Смотреть все →</p>
                </div>
            </div>
            <div id="posts" class="postsBlock">
                <div class="sBlock">
                    <button class="filtersMenu" style="display: none;" onclick="OpenMenu()"></button>
                    <span class="filtersMenuSpan" style="display: none;"></span>
                    <div class="searchBlock skip">
                        <div class="tb">
                            <div class="td"><input id="search" type="text" placeholder="Поиск публикаций" autocomplete="off" required></div>
                            <div class="td" id="s-cover">
                            <button type="submit" onclick="SearchPosts()">
                                <div id="s-circle"></div>
                                <span></span>
                            </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="dataSpinner" style="display: none;">
                    <div class="reverse-spinner">
                        <div class="status">Загрузка<span class="status__dot">.</span><span class="status__dot">.</span><span class="status__dot">.</span></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" style="display: none">
        <g id="views">
            <path fill="#cdcac7" d="M21.92,11.6C19.9,6.91,16.1,4,12,4S4.1,6.91,2.08,11.6a1,1,0,0,0,0,.8C4.1,17.09,7.9,20,12,20s7.9-2.91,9.92-7.6A1,1,0,0,0,21.92,11.6ZM12,18c-3.17,0-6.17-2.29-7.9-6C5.83,8.29,8.83,6,12,6s6.17,2.29,7.9,6C18.17,15.71,15.17,18,12,18ZM12,8a4,4,0,1,0,4,4A4,4,0,0,0,12,8Zm0,6a2,2,0,1,1,2-2A2,2,0,0,1,12,14Z"/>
        </g>
    </svg>
    <svg viewBox="0 0 64 64" style="display: none">
        <g id="topchik">
            <path d="m32 2l-16 16h10v15h12v-15h10z"/>
            <path d="m32 62c-3.3 0-6-2.8-6-6.3v-9.3c0-3.5 2.7-6.3 6-6.3s6 2.8 6 6.3v9.3c0 3.5-2.7 6.3-6 6.3m0-18.6c-1.7 0-3 1.3-3 3v9.3c0 1.6 1.3 3 3 3s3-1.3 3-3v-9.3c0-1.7-1.3-3-3-3"/>
